<Scene xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stamps.controleur.PanneauDetail">
   <BorderPane prefHeight="1200.0" prefWidth="2000.0" styleClass="background" stylesheets="@../../ressource/styleSheet.css">
      <center>
         <VBox maxHeight="1000.0" maxWidth="1000.0" prefHeight="1000.0" BorderPane.alignment="CENTER_RIGHT">
            <BorderPane.margin>
               <Insets right="100.0" />
            </BorderPane.margin>
            <children>
               <Label layoutX="10.0" layoutY="654.0" prefHeight="50.0" text="Informations" textFill="WHITE">
                  <font>
                     <Font size="30.0" />
                  </font>
               </Label>
               <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" maxHeight="652.0" maxWidth="1000.0" prefHeight="700.0" prefWidth="1000.0" stylesheets="@../../ressource/styleSheet.css" vbarPolicy="NEVER">
                  <content>
                  <VBox fx:id="vbox" alignment="CENTER" maxHeight="747.0" maxWidth="1000.0" prefHeight="700.0" prefWidth="998.0" styleClass="listView" stylesheets="@../../ressource/styleSheet.css" BorderPane.alignment="CENTER" />
                  </content>
               </ScrollPane>
               <Label prefHeight="50.0" text="Tags" textFill="WHITE">
                  <font>
                     <Font size="30.0" />
                  </font>
               </Label>
               <ListView fx:id="listeTags" prefHeight="300.0" prefWidth="1000.0" styleClass="listView" />
            </children>
         </VBox>
      </center>
      <top>
         <Pane prefHeight="111.0" prefWidth="2000.0" BorderPane.alignment="CENTER">
            <children>
               <MenuButton contentDisplay="CENTER" layoutX="80.0" layoutY="-3.0" mnemonicParsing="false" styleClass="button" stylesheets="@../../ressource/styleSheet.css" text="Menu" textFill="WHITE">
                  <items>
                   <MenuItem mnemonicParsing="false" onAction="#changerGlobal" styleClass="menuItem" text="global">
                        <accelerator>
                           <KeyCodeCombination alt="UP" code="G" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                     </MenuItem>
                   <MenuItem fx:id="sauvegarder" mnemonicParsing="false" onAction="#sauvegarde" styleClass="menuItem" text="sauvegarder">
                        <accelerator>
                           <KeyCodeCombination alt="UP" code="S" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                     </MenuItem>
                     <MenuItem fx:id="ajout" mnemonicParsing="false" onAction="#ajouterInfo" styleClass="menuItem" text="ajout info">
                        <accelerator>
                           <KeyCodeCombination alt="UP" code="N" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                     </MenuItem>
                  </items>
                  <font>
                     <Font size="48.0" />
                  </font>
                  <cursor>
                     <Cursor fx:constant="DEFAULT" />
                  </cursor>
               </MenuButton>
               <TextField fx:id="titre" alignment="CENTER" layoutX="719.0" layoutY="23.0" prefHeight="65.0" prefWidth="563.0" styleClass="textArea" text="nom">
                  <font>
                     <Font name="System Italic" size="45.0" />
                  </font>
               </TextField>
               <Button fx:id="boutonTags" layoutX="340.0" layoutY="5.0" mnemonicParsing="false" onAction="#afficherTags" prefHeight="55.0" prefWidth="270.0" text="Tags" textAlignment="CENTER" textFill="WHITE">
                  <font>
                     <Font size="40.0" />
                  </font>
               </Button>
            </children>
            <BorderPane.margin>
               <Insets top="10.0" />
            </BorderPane.margin>
         </Pane>
      </top>
      <bottom>
         <Pane fx:id="paneBottom" prefHeight="103.0" prefWidth="2000.0" BorderPane.alignment="CENTER">
            <children>
               <Label fx:id="date" alignment="CENTER" layoutX="582.0" layoutY="7.0" prefHeight="67.0" prefWidth="837.0" text="date" textAlignment="CENTER" textFill="WHITE">
                  <font>
                     <Font size="48.0" />
                  </font></Label>
               <ImageView fx:id="suivant" fitHeight="90.0" fitWidth="90.0" layoutX="1896.0" layoutY="-24.0" onMouseClicked="#suivant" pickOnBounds="true" preserveRatio="true" styleClass="button" />
               <ImageView fx:id="precedent" fitHeight="90.0" fitWidth="90.0" layoutX="14.0" layoutY="-24.0" onMouseClicked="#precedent" pickOnBounds="true" preserveRatio="true" styleClass="button" />
            </children>
         </Pane>
      </bottom>
      <left>
         <Pane prefHeight="1056.0" prefWidth="500.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
               <Insets left="150.0" />
            </BorderPane.margin>
            <children>
               <ImageView fx:id="image" fitHeight="600.0" fitWidth="600.0" layoutX="-2.0" layoutY="145.0" onMouseClicked="#chercheImage" pickOnBounds="true" preserveRatio="true" />
            </children>
         </Pane>
      </left>
   </BorderPane>
   <fill>
      <LinearGradient endX="1.0" endY="1.0">
         <stops>
            <Stop>
               <color>
                  <Color />
               </color>
            </Stop>
            <Stop offset="1.0">
               <color>
                  <Color red="1.0" green="1.0" blue="1.0" />
               </color>
            </Stop>
         </stops>
      </LinearGradient>
   </fill>
</Scene>
